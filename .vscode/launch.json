  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'http-request'",
      "cargo": {
        "args": ["build", "--bin=http-request", "--package=http-request"],
        "filter": {
          "name": "http-request",
          "kind": "bin"
        }
      },
      "args": ["-u=https://google.com", "-m=get"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'http-request'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=http-request",
          "--package=http-request"
        ],
        "filter": {
          "name": "http-request",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
